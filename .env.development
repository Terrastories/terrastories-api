# Development Environment Configuration
NODE_ENV=development
PORT=3000

# SQLite for local development (faster setup)
DATABASE_URL=./data.db
DATABASE_SPATIAL_SUPPORT=true

# Development security (insecure)
JWT_SECRET=development-test-secret-insecure
LOG_LEVEL=debug

# Features - all enabled for development
OFFLINE_MODE=false
SYNC_ENABLED=true
MEDIA_UPLOAD=true
ADMIN_INTERFACE=true

# Optional: Use PostgreSQL locally for production-like testing
# DATABASE_URL=postgresql://postgres:password@localhost:5432/terrastories_dev
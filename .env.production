# Production Environment Configuration
NODE_ENV=production
PORT=3000

# PostgreSQL with PostGIS
DATABASE_URL=postgresql://user:password@localhost:5432/terrastories
DATABASE_POOL_SIZE=10
DATABASE_MAX_CONNECTIONS=20
DATABASE_SSL=true
DATABASE_SPATIAL_SUPPORT=true

# Security
JWT_SECRET=your-secure-32-character-jwt-secret-key
LOG_LEVEL=info

# Features
OFFLINE_MODE=false
SYNC_ENABLED=true
MEDIA_UPLOAD=true
ADMIN_INTERFACE=true